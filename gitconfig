[user]
  name = Evgeni Kolev
  email = evgenysw@gmail.com
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[push]
  default = simple
[core]
  editor = vim
[alias]
  st = status -sb
  one = log --pretty=oneline --reverse -10
  ahead = log --pretty=oneline --reverse @{u}..
  behind = log --pretty=oneline --reverse ..@{u}
  vst = !vim -c Gstatus .
  vdiff = !vim -c Gdiff $1
  tags = tag -l
  branches = branch -a
  remotes = remote -v

  # TODO figure out which works best for me
  graph = log --oneline --color --graph --decorate
  graph2 = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	graph3 = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	ctags = !.git/hooks/ctags
[color]
  ui = auto
[github]
  user = edkolev
[init]
	templatedir = ~/.git_template
